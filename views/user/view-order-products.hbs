 <section>
      <div class="container pt-5" >
        <div class="row " >
          {{#each products}}

          <div class="col-md-3 col-6" style="text-align: center;display: flex; justify-content: center;align-items: center;" >
           
            <div class="card" style="width: 15rem; height: 26rem;">
              <img
                src="/product-images/{{this.product._id}}.jpg"
                class="card-img-top"
                style="height: 15rem;"
                alt="rukho sara sabar karo"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.product.Name}}</h5>
                <p class="card-text">quantity:{{this.quantity}}</p>
              </div>
            </div>
           </div>  
           {{/each}}        
           </div>
      </div>
    </section> 

   