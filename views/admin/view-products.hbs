<section>
    <div class="container">
        <div class="row mt-4 ">
            <div class="ml-auto" style="margin-left:90%">
            <a href="add-product" ><button type="button" class="btn btn-success" >Add product</button></a>
            </div>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">description</th>
      <th scope="col">price</th>
      <th scope="col">Image</th>     
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 75px; height: 75px;"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</a></td>
    </tr>  
    {{/each}}
  </tbody>
</table>
    </div>
</section>