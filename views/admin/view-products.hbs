<section>
    <div class="container">
        <div class="row mt-4 ">
            <div class="ml-auto" style="margin-left:90%">
            <a href="admin/add-product" ><button type="button" class="btn btn-success" >Add product</button></a>
            </div>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">description</th>
      <th scope="col">Image</th>     
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="{{this.image}}" alt="" style="width: 75px; height: 75px;"></td>
    </tr>  
    {{/each}}
  </tbody>
</table>
    </div>
</section>